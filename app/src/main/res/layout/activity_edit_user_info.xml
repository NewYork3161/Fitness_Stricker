<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".EditUserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="80dp">

        <!-- New First Name -->

        <!-- New Last Name -->
        <EditText
            android:id="@+id/newFirstName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:background="#E5E5E5"
            android:hint="New First Name"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/newLastName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#E5E5E5"
            android:hint="New Last Name"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- New Email -->
        <EditText
            android:id="@+id/newEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#E5E5E5"
            android:hint="New Email"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="35dp" />

        <!-- Button Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/saveUserInfoButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0D6EFD"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/cancelUserInfoButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#333333" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

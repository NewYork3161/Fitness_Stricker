<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".UserProfileSettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Circular user image placeholder -->
        <ImageView
            android:id="@+id/profileImageSetting"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile_image"
            android:background="@drawable/circle_mask"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp" />

        <!-- Add image text -->
        <TextView
            android:id="@+id/addImageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add user image"
            android:textSize="16sp"
            android:textColor="#777777"
            android:layout_marginBottom="20dp" />

        <!-- User name -->
        <TextView
            android:id="@+id/settingsUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mike Clark"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- User email -->
        <TextView
            android:id="@+id/settingsUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hudsonriver4151@gmail.com"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="30dp" />

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0D6EFD"
            android:textSize="18sp"
            android:layout_marginBottom="15dp" />

        <!-- Delete Profile Button -->
        <Button
            android:id="@+id/deleteProfileButton"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Delete Profile"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="25dp" />

        <!-- Back To Profile Button -->
        <Button
            android:id="@+id/backToProfileButton"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Back To Profile"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0D6EFD"
            android:textSize="18sp"
            android:layout_marginBottom="40dp" />

    </LinearLayout>
</ScrollView>

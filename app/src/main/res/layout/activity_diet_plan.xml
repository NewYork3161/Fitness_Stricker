<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dietTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mediterranean Diet Plan"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/dietIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Mediterranean diet supports heart health and stable blood pressure. Focus on whole foods, lean proteins, and low-sodium meals. Follow the timing schedule below for better digestion and kidney function."
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/timingHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Timing Schedule"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/timingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Breakfast: 7:00–9:00 AM\n• Lunch: 12:00–2:00 PM\n• Snack: 3:00–4:00 PM\n• Dinner: 6:00–7:30 PM\n\nFollowing this schedule supports digestion and energy balance."
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/breakfastHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/breakfastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Greek yogurt or oatmeal\n• Blueberries or strawberries\n• Honey (optional)\n• One boiled egg\n• Water or herbal tea"
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/lunchHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/lunchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Grilled chicken or salmon\n• Mixed vegetables\n• Brown rice or quinoa\n• Olive oil with lemon instead of salt"
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/dinnerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/dinnerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Turkey or white fish\n• Mixed vegetables\n• Small potato or whole-grain bread\n• Herbs instead of salt"
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/lowSaltHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low-Salt Guideline"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/lowSaltText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Limit sodium daily.\n• Avoid canned soups and processed meats.\n• Use spices instead of salt.\n• Drink plenty of water."
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/backToProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Back to Profile"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0D6EFD" />

    </LinearLayout>
</ScrollView>
